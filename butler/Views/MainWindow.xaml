<Window
    x:Class="butler.Views.MainWindow"
    xmlns:local="clr-namespace:Butler"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:tb="http://www.hardcodet.net/taskbar" Visibility="Hidden"
    Initialized="MainWindow_OnInitialized"
>
    <Grid Visibility="Hidden">
        <tb:TaskbarIcon
            IconSource="..\assets\favicon.ico"
            ToolTipText="Butler" >

            <!-- Set a simple context menu  -->
            <tb:TaskbarIcon.ContextMenu>
                <!-- ReSharper disable once Xaml.InvalidType -->
                <ContextMenu>
                    <MenuItem Header="Quit" Click="QuitButler" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>

    </Grid>
</Window>